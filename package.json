  "description": "a tiny tool for making command-line interfaces with TypeScript",
  "types": "dist/types.d.ts",
  "main": "dist/index.js",
  "module": "dist/index.js",
  "files": [
    "dist"
  ],
  "scripts": {
    "build": "tsc",
    "lint": "eslint src/**/*.ts test/**/*.ts",
