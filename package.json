    "@types/node": "^12.6.8",
    "@types/sinon": "^7.0.13",
    "@typescript-eslint/parser": "^1.13.0",
    "chai": "^4.2.0",
    "coveralls": "^3.0.5",
    "eslint": "^6.1.0",
    "husky": "^3.0.1",
    "if-node-version": "^1.1.1",
    "mocha": "^6.2.0",
    "nyc": "12.x.x",
    "sinon": "^7.3.2",
    "standard-version": "^6.0.1",
    "ts-node": "^8.3.0",
